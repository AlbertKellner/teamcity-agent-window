{
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "suppressTaskName": true,
    "args": [],
    "tasks": [
        {
            "taskName": "Build",
            "args": [
                "build",
                "${workspaceRoot}\\src\\Wait\\project.json"
            ],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "Release",
            "args": [
                "build",
                "${workspaceRoot}\\src\\Wait\\project.json",
                "--configuration", 
                "Release"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}